<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<style>
    .card > img {
        width: 50px;
        height: 50px;
        border-radius: 50px;
    }

    .card {
        width: 210px;
        height: 200px;
        margin: 5px;
        padding: 5px;
        border: 1px solid gray;
        border-radius: 5px;
        background-color: white;
    }
</style>
<body>

    {{> header}}

    <h1>Hello HBS</h1>

    {{#each testData}}
        <div class='card'>
            <img src = "http://localhost:8080/avatars/{{this.avatar}}"/>
            <div data-id="fullName">
                {{this.fullName}}
            </div>
            <div data-id="email">
                {{this.email}}
            </div>
            <div data-id="phone">
                {{this.phone}}
            </div>
            <div data-id="address">
                {{this.address}}
            </div>
            <button>✏️</button>
            <button onclick = "salute('{{this.fullName}}')">💾</button>
            <button>🗑️</button>
        </div>
    {{/each}}
</body>
<script>
    const salute = (name) => {
        alert('Hey ' + name);
    }
</script>

</html>